<UserControl x:Class="DuckBot.GUI.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource SurfaceBrush}" Padding="0">
            <ScrollViewer x:Name="ScrollBox" VerticalScrollBarVisibility="Auto"
                          BorderThickness="0">
                <StackPanel x:Name="LogPanel" Margin="8"/>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <CheckBox x:Name="AutoScrollToggle" Content="Auto scroll" IsChecked="True" Margin="0,0,12,0"/>
            <Button Content="Copy" Width="100" Margin="0,0,8,0" Click="Copy_Click"/>
            <Button Content="Clear Logs" Width="120" Click="Clear_Click"/>
        </StackPanel>
    </Grid>
</UserControl>