<UserControl x:Class="DuckBot.GUI.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e" Foreground="White">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="ScrollBox" VerticalScrollBarVisibility="Auto"
                      Background="#1e1e1e" BorderBrush="#333" BorderThickness="1">
            <StackPanel x:Name="LogPanel"/>
        </ScrollViewer>

        <Button Grid.Row="1" Content="Clear Logs" Width="120" Height="28"
                Margin="0,6,0,0" HorizontalAlignment="Right"
                Click="Clear_Click"/>
    </Grid>
</UserControl>
