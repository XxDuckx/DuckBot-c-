<UserControl x:Class="DuckBot.GUI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBackground}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="WelcomeText" FontSize="20" Margin="0,0,0,20"/>
            <TextBlock Text="LDPlayer Instances (Placeholder)" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="InstanceList" Height="200" Background="#252525" Foreground="White"/>
            <Button Content="Refresh Instances" Click="Refresh_Click"
                    Margin="0,20,0,0" Height="35" Background="#3a3a3a" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
