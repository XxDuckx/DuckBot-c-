<UserControl x:Class="DuckBot.GUI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="24">
        <StackPanel>
            <TextBlock x:Name="WelcomeText" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="LDPlayer Instances" FontSize="16" Margin="0,0,0,10"/>
            <Border Background="{StaticResource SurfaceBrush}" Padding="8" CornerRadius="{StaticResource PanelCornerRadius}">
                <ListBox x:Name="InstanceList" Height="220"/>
            </Border>
            <Button Content="Refresh Instances" Click="Refresh_Click"
                    Margin="0,20,0,0" Height="36" Width="200"
                    Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>