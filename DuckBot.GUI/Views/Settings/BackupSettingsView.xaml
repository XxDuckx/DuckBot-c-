<UserControl x:Class="DuckBot.GUI.Views.Settings.BackupsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e" Foreground="White">
    <StackPanel Margin="10">
        <TextBlock Text="Backups" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <GroupBox Header="Create Backup" Margin="0,6,0,6">
            <StackPanel Margin="8">
                <Button x:Name="CreateBtn" Content="Create DuckBot Backup" Width="250" Margin="0,4"/>
                <Button x:Name="OpenFolderBtn" Content="Open Backup Folder" Width="250" Margin="0,4"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Restore Backup" Margin="0,6,0,6">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBox x:Name="BackupPath" Width="350" Margin="0,0,8,0"/>
                    <Button Content="..." Width="40" Click="Browse_Click"/>
                </StackPanel>
                <CheckBox x:Name="HardRestore" Content="Hard Restore (overwrite existing)" Margin="0,4"/>
                <Button x:Name="RestoreBtn" Content="Restore Backup" Width="200" Margin="0,8,0,0"/>
            </StackPanel>
        </GroupBox>

        <Button x:Name="SaveBtn" Content="Save" Width="100" HorizontalAlignment="Right" Margin="0,8,0,0"/>
    </StackPanel>
</UserControl>
