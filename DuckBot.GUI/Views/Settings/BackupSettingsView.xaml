<UserControl x:Class="DuckBot.GUI.Views.Settings.BackupsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Backups" FontWeight="Bold" FontSize="18" Margin="0,0,0,16"/>

            <GroupBox Header="Create Backup">
                <StackPanel Margin="8">
                    <Button x:Name="CreateBtn" Content="Create DuckBot Backup" Width="260" Margin="0,4"
                            Click="CreateBtn_Click"/>
                    <Button x:Name="OpenFolderBtn" Content="Open Backup Folder" Width="260" Margin="0,4"
                            Click="OpenFolderBtn_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Restore Backup">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <TextBox x:Name="BackupPath" Width="360" Margin="0,0,8,0"/>
                        <Button Content="..." Width="40" Click="Browse_Click"/>
                    </StackPanel>
                    <CheckBox x:Name="HardRestore" Content="Hard Restore (overwrite existing)"/>
                    <Button x:Name="RestoreBtn" Content="Restore Backup" Width="200" Margin="0,8,0,0"
                            Click="RestoreBtn_Click"/>
                </StackPanel>
            </GroupBox>

            <Button x:Name="SaveBtn" Content="Save" Width="120" HorizontalAlignment="Right" Margin="0,16,0,0"
                    Click="SaveBtn_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
