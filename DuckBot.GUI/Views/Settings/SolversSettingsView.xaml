<UserControl x:Class="DuckBot.GUI.Views.Settings.SolversSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="Solvers" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
            <TextBlock Text="*WARNING* These settings may affect stability, only change if you know what you're doing." 
                       Foreground="LightCoral" Margin="0,0,0,8"/>

            <GroupBox Header="LDPlayer Emulator" Margin="0,6,0,6">
                <StackPanel Margin="8">
                    <CheckBox x:Name="AdCloser" Content="Game Advertisement Closer"/>
                    <CheckBox x:Name="LdCrashCloser" Content="LD Store Crash Closer"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="West Game" Margin="0,6,0,6">
                <StackPanel Margin="8">
                    <CheckBox x:Name="CaptchaSolver" Content="Captcha Solver"/>
                    <CheckBox x:Name="GameLoading" Content="Game Loading Solver"/>
                    <CheckBox x:Name="MessageSolver" Content="Message / Quit Handling"/>
                </StackPanel>
            </GroupBox>

            <Button x:Name="SaveButton" Content="Save" Width="100" HorizontalAlignment="Right" Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
