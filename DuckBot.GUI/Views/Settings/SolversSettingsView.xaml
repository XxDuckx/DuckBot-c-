<UserControl x:Class="DuckBot.GUI.Views.Settings.SolversSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Solvers" FontWeight="Bold" FontSize="18" Margin="0,0,0,12"/>
            <TextBlock Text="*WARNING* These settings may affect stability, only change if you know what you're doing."
                       Foreground="{StaticResource WarningBrush}" TextWrapping="Wrap" Margin="0,0,0,12"/>

            <GroupBox Header="LDPlayer Emulator">
                <StackPanel Margin="4">
                    <CheckBox x:Name="AdCloser" Content="Game Advertisement Closer"/>
                    <CheckBox x:Name="LdCrashCloser" Content="LD Store Crash Closer"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="West Game">
                <StackPanel Margin="4">
                    <CheckBox x:Name="CaptchaSolver" Content="Captcha Solver"/>
                    <CheckBox x:Name="GameLoading" Content="Game Loading Solver"/>
                    <CheckBox x:Name="MessageSolver" Content="Message / Quit Handling"/>
                </StackPanel>
            </GroupBox>

            <Button x:Name="SaveButton" Content="Save" Width="120" HorizontalAlignment="Right" Margin="0,16,0,0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>