<UserControl x:Class="DuckBot.GUI.Views.Settings.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10" Orientation="Vertical">
            <TextBlock Text="General Settings" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <!-- Emulator selection -->
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Emulator:" Width="220"/>
                <ComboBox x:Name="EmulatorSelect" Width="180">
                    <ComboBoxItem Content="LDPlayer 9"/>
                    <ComboBoxItem Content="LDPlayer 5"/>
                </ComboBox>
            </StackPanel>

            <!-- Toggles -->
            <CheckBox x:Name="AskOnStart" Content="Ask which emulator to run on start" Margin="0,4"/>
            <CheckBox x:Name="RestartOnBoot" Content="Restart game on first boot" Margin="0,4"/>
            <CheckBox x:Name="AutoSignIn" Content="Auto sign-in with last account" Margin="0,4"/>
            <CheckBox x:Name="ClearCache" Content="Clear temp cache regularly (recommended on slow PCs)" Margin="0,4"/>
            <CheckBox x:Name="CloseOnStop" Content="Close emulators when bot stops" Margin="0,4"/>

            <!-- Theme -->
            <StackPanel Orientation="Horizontal" Margin="0,8">
                <TextBlock Text="Theme:" Width="220"/>
                <ComboBox x:Name="ThemeSelect" Width="180">
                    <ComboBoxItem Content="Dark"/>
                    <ComboBoxItem Content="Light"/>
                </ComboBox>
            </StackPanel>

            <CheckBox x:Name="AutoSave" Content="Auto-save configs on menu close" Margin="0,4"/>

            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Button Content="Download Bot Manager Tool" Width="220" Margin="0,0,10,0"/>
                <Button Content="Clear All Cooldowns" Width="180"/>
            </StackPanel>

            <Button x:Name="SaveButton" Content="Save" Width="100" Margin="0,15,0,0" HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
