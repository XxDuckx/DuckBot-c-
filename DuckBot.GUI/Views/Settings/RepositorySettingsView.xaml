<UserControl x:Class="DuckBot.GUI.Views.Settings.RepositorySettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Community Repository" FontWeight="Bold" FontSize="18" Margin="0,0,0,12"/>
            <TextBlock Text="Share and browse DuckBot community templates!"
                       TextWrapping="Wrap" Margin="0,0,0,16"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                <Button x:Name="ContributeBtn" Content="Contribute" Width="150" Margin="0,0,12,0"
                        Click="ContributeBtn_Click"/>
                <Button x:Name="BrowseBtn" Content="Browse" Width="150" Click="BrowseBtn_Click"/>
            </StackPanel>

            <Border Background="{StaticResource SurfaceBrush}" Padding="8">
                <ListBox x:Name="TemplateList" Height="260"/>
            </Border>

            <Button x:Name="RefreshBtn" Content="Refresh" Width="120" HorizontalAlignment="Right" Margin="0,16,0,0"
                    Click="RefreshBtn_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
