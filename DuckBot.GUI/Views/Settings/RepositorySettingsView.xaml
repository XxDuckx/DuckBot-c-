<UserControl x:Class="DuckBot.GUI.Views.Settings.RepositorySettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="Community Repository" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
            <TextBlock Text="Share and browse DuckBot community templates!" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button x:Name="ContributeBtn" Content="Contribute" Width="150" Margin="0,0,10,0"/>
                <Button x:Name="BrowseBtn" Content="Browse" Width="150"/>
            </StackPanel>

            <ListBox x:Name="TemplateList" Height="250" Background="#252525" Margin="0,10,0,0"/>

            <Button x:Name="RefreshBtn" Content="Refresh" Width="100" HorizontalAlignment="Right" Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
