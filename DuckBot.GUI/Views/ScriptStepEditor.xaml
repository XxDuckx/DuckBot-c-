<Window x:Class="DuckBot.GUI.Views.ScriptStepEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Edit Step" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Step Editor" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBox x:Name="ParamBox" Height="200" TextWrapping="Wrap"
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <Button Content="Save" Width="100" HorizontalAlignment="Right" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Window>
