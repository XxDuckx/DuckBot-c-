<UserControl x:Class="DuckBot.GUI.Views.LiveRunnerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e" Foreground="White">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Running bots / controls -->
        <Grid Grid.Column="0" Margin="0,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="RunningGrid" Grid.Row="0"
                      AutoGenerateColumns="False"
                      Background="#252525" Foreground="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Game" Binding="{Binding Game}" Width="*"/>
                    <DataGridTextColumn Header="Instance" Binding="{Binding Instance}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Refresh" Width="100" Height="30" Margin="0,0,8,0" Click="Refresh_Click"/>
                <Button Content="Stop Selected" Width="120" Height="30" Click="StopSelected_Click"/>
            </StackPanel>
        </Grid>

        <!-- Screenshot / preview -->
        <Border Grid.Column="1" BorderBrush="#333" BorderThickness="1" CornerRadius="6" Padding="8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                    <Button Content="Capture Screenshot" Width="160" Height="28" Click="Capture_Click" Margin="0,0,8,0"/>
                    <TextBlock x:Name="ShotInfo" VerticalAlignment="Center"/>
                </StackPanel>
                <Image x:Name="Shot" Stretch="Uniform" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
