<UserControl x:Class="DuckBot.GUI.Views.LiveRunnerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Running bots / controls -->
        <Grid Grid.Column="0" Margin="0,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="8">
                <DataGrid x:Name="RunningGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Game" Binding="{Binding Game}" Width="*"/>
                        <DataGridTextColumn Header="Instance" Binding="{Binding Instance}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                <Button Content="Refresh" Width="110" Height="32" Margin="0,0,8,0" Click="Refresh_Click"/>
                <Button Content="Stop Selected" Width="140" Height="32" Margin="0,0,8,0" Click="StopSelected_Click"/>
                <Button Content="Stop All" Width="120" Height="32" Click="StopAll_Click"/>
            </StackPanel>
        </Grid>

        <!-- Screenshot / preview -->
        <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" Padding="12">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,12">
                    <Button Content="Capture Screenshot" Width="170" Height="30" Click="Capture_Click" Margin="0,0,8,0"/>
                    <Button Content="Open Folder" Width="130" Height="30" Click="OpenFolder_Click" Margin="0,0,8,0"/>
                    <TextBlock x:Name="ShotInfo" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>
                <Border Background="{StaticResource SurfaceAltBrush}" BorderThickness="0" CornerRadius="{StaticResource PanelCornerRadius}">
                    <Image x:Name="Shot" Stretch="Uniform"/>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
