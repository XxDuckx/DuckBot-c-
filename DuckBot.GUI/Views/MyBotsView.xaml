<UserControl x:Class="DuckBot.GUI.Views.MyBotsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#1e1e1e">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Create bot instance" Width="180" Height="32" Margin="0,0,8,0"
                    Click="CreateBot_Click"/>
            <Button Content="Refresh instances" Width="160" Height="32" Click="RefreshInst_Click"/>
        </StackPanel>

        <!-- Bot List -->
        <DataGrid x:Name="BotGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  Background="#252525"
                  Foreground="White"
                  RowBackground="#1f1f1f"
                  AlternatingRowBackground="#232323">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Game" Binding="{Binding Game}" Width="*"/>

                <DataGridTemplateColumn Header="Instance" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.AvailableInstances, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding Instance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectionChanged="Instance_SelectionChanged"
                                      Background="#2b2b2b"
                                      Foreground="White" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Actions" Width="220">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="▶" Width="36" Height="28" Margin="0,0,6,0"/>
                                <Button Content="⏹" Width="36" Height="28" Margin="0,0,6,0"/>
                                <Button Content="⚙" Width="36" Height="28" Margin="0,0,6,0" Click="EditBot_Click"/>
                                <Button Content="🗑" Width="36" Height="28" Click="DeleteBot_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,8,0,0">
            <Button Content="Start selected" Width="140" Height="30" Margin="0,0,8,0"/>
            <Button Content="Stop selected" Width="140" Height="30" Margin="0,0,8,0"/>
            <Button Content="Delete selected" Width="140" Height="30" Margin="0,0,8,0" Click="DeleteSelected_Click"/>
            <Button Content="Quick editor" Width="120" Height="30" Click="QuickEditor_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Margin="0,8,0,0">
            <Button Content="Start selected" Width="140" Height="30" Margin="0,0,8,0"
            Click="StartSelected_Click"/>
            <Button Content="Stop selected" Width="140" Height="30" Margin="0,0,8,0"
            Click="StopSelected_Click"/>
            <Button Content="Delete selected" Width="140" Height="30" Margin="0,0,8,0"
            Click="DeleteSelected_Click"/>
            <Button Content="Quick Launch" Width="120" Height="30"
            Click="QuickLaunch_Click"/>
            <Button Content="Fix Emulators" Width="120" Height="30"
            Click="FixEmulators_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
