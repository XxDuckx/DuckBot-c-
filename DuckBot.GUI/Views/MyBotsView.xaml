<UserControl x:Class="DuckBot.GUI.Views.MyBotsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="Create bot instance" Width="190" Height="34" Margin="0,0,8,0"
                    Click="CreateBot_Click" Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="Refresh instances" Width="170" Height="34" Click="RefreshInst_Click"/>
        </StackPanel>

        <!-- Bot List -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" Padding="8">
            <DataGrid x:Name="BotGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      SelectionMode="Extended"
                      CanUserAddRows="False"
                      Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Game" Binding="{Binding Game}" Width="*"/>
                    <DataGridTemplateColumn Header="Instance" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.AvailableInstances, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          SelectedItem="{Binding Instance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectionChanged="Instance_SelectionChanged"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="â–¶" Width="36" Height="28" Margin="0,0,6,0"
                                            Click="PlayBot_Click"/>
                                    <Button Content="â¹" Width="36" Height="28" Margin="0,0,6,0"
                                            Click="StopBot_Click"/>
                                    <Button Content="âš™" Width="36" Height="28" Margin="0,0,6,0"
                                            Click="EditBot_Click"/>
                                    <Button Content="ðŸ—‘" Width="36" Height="28" Click="DeleteBot_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,12,0,0">
            <Button Content="Start selected" Width="150" Height="32" Margin="0,0,8,0"
                    Click="StartSelected_Click"/>
            <Button Content="Stop selected" Width="150" Height="32" Margin="0,0,8,0"
                    Click="StopSelected_Click"/>
            <Button Content="Delete selected" Width="150" Height="32" Margin="0,0,8,0"
                    Click="DeleteSelected_Click"/>
            <Button Content="Quick Launch" Width="130" Height="32" Margin="0,0,8,0"
                    Click="QuickLaunch_Click"/>
            <Button Content="Quick editor" Width="130" Height="32" Margin="0,0,8,0"
                    Click="QuickEditor_Click"/>
            <Button Content="Fix Emulators" Width="130" Height="32"
                    Click="FixEmulators_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
