<UserControl x:Class="DuckBot.GUI.Views.MyBotsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="Create bot instance" Width="190" Height="34" Margin="0,0,8,0"
                    Command="{Binding AddBotCommand}" Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="Refresh instances" Width="170" Height="34" Command="{Binding RefreshInstancesCommand}"/>
        </StackPanel>

        <!-- Main area split: left bot list, right details/logs -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <!-- Bot List -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" Padding="8">
                <DataGrid x:Name="BotGrid"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          SelectionMode="Extended"
                          CanUserAddRows="False"
                          Margin="0"
                          ItemsSource="{Binding Bots}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Game" Binding="{Binding Game}" Width="*"/>
                        <DataGridTemplateColumn Header="Instance" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.AvailableInstances, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedItem="{Binding Instance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Actions" Width="220">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="â–¶" Width="36" Height="28" Margin="0,0,6,0"
                                                Command="{Binding DataContext.StartBotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="â¹" Width="36" Height="28" Margin="0,0,6,0"
                                                Command="{Binding DataContext.StopBotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="âš™" Width="36" Height="28" Margin="0,0,6,0"
                                                Command="{Binding DataContext.OpenEditorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="ðŸ—‘" Width="36" Height="28"
                                                Command="{Binding DataContext.DeleteBotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Right column: variables + logs -->
            <Border Grid.Column="1" Background="{StaticResource SurfaceAltBrush}" Padding="8" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock Text="Selected bot variables" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ItemsControl x:Name="VariablesHost" Margin="0,0,0,12"/>

                    <TextBlock Text="Runtime log" FontWeight="SemiBold" Margin="0,8,0,6"/>
                    <ListBox x:Name="LogList" ItemsSource="{Binding Logs}" Height="260"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,12,0,0">
            <Button Content="Start selected" Width="150" Height="32" Margin="0,0,8,0"
                    Command="{Binding StartSelectedCommand}" CommandParameter="{Binding SelectedItems, ElementName=BotGrid}"/>
            <Button Content="Stop selected" Width="150" Height="32" Margin="0,0,8,0"
                    Command="{Binding StopSelectedCommand}" CommandParameter="{Binding SelectedItems, ElementName=BotGrid}"/>
            <Button Content="Delete selected" Width="150" Height="32" Margin="0,0,8,0"
                    Command="{Binding DeleteSelectedCommand}" CommandParameter="{Binding SelectedItems, ElementName=BotGrid}"/>
            <Button Content="Quick Launch" Width="130" Height="32" Margin="0,0,8,0"
                    Command="{Binding QuickLaunchCommand}"/>
            <Button Content="Quick editor" Width="130" Height="32" Margin="0,0,8,0"
                    Command="{Binding OpenEditorCommand}" />
            <Button Content="Fix Emulators" Width="130" Height="32"
                    Command="{Binding FixEmulatorsCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>